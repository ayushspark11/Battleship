        <div class="form-group">
      <label class="col-form-label col-form-label-lg" for="inputLarge">X Coordinate</label>
      <input class="form-control form-control-lg" type="text" placeholder="Enter X Coordinate" id="inputLarge">
        </div>

        <div class="form-group">
      <label class="col-form-label col-form-label-lg" for="inputLarge">Y Coordinate</label>
      <input class="form-control form-control-lg" type="text" placeholder="Enter Y Coordinate" id="inputLarge">
