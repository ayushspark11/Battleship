<!-- //////////////////////////////////// Multiplayer MODAL ////////////////////////// -->

<div class="modal" id="multiplayer" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Enter Multiplayer Code</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <p>Generate a code to host a game</p>

          <a class="btn btn-primary" role="button" href="/host">Host Game</a>
          <br></br>
          <p>Or enter a multiplayer code you have recieved</p>

        <form>
          <fieldset>
            <div class="form-group">
                <label class="col-form-label" for="inputDefault">Multiplayer Code</label>
                <input type="text" class="form-control" placeholder="Default input" id="inputDefault">
            </div>
          </fieldset>
        </form>



      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Enter Game!</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<!-- //////////////////////////////////// SINGLE PLAYER MODAL ////////////////////////// -->
<div class="modal" id="singleplayer" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Good Luck BoilerMaker</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Please choose a level of difficulty!</p>

        <a class="btn btn-success" role="button" href="/join?key=single&eOrH=easy">Easy</a>
        <a class="btn btn-danger" role="button" href="/join?key=single&eOrH=hard">Hard</a>


      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<table align="center">
    <tr>
        <td height="370px" width="200px" style="background-color: transparent"></td>
    </tr>
    <tr>
    <td height="100px" width="400px" style="color: #868e96; align-content: center; background-color: transparent; float: top" height="100px">

