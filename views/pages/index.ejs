<!-- //////////////////////////////////// Multiplayer MODAL ////////////////////////// -->

<div class="modal" id="multiplayer" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Enter Multiplayer Code</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Please Enter Multiplayer Code You Have Recieved</p>

        <form>
          <fieldset>
            <div class="form-group">
                <label class="col-form-label" for="inputDefault">Multiplayer Code</label>
                <input type="text" class="form-control" placeholder="Default input" id="inputDefault">
            </div>
          </fieldset>
        </form>



      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Enter Game!</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<!-- //////////////////////////////////// SINGLE PLAYER MODAL ////////////////////////// -->
<div class="modal" id="singleplayer" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Good Luck BoilerMaker</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Please choose a level of difficulty!</p>

        <button type="button" class="btn btn-outline-success">Easy</button>
        <button type="button" class="btn btn-outline-danger">Hard</button>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Enter Game!</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>



